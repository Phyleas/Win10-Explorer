    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <!--<Style x:Key="RowSelectedHighlight" TargetType="Rectangle">
                <Setter Property="StrokeThickness" Value="0"></Setter>
                <Setter Property="Fill" Value="{ThemeResource SystemAccentColor}"></Setter>
            </Style>-->
