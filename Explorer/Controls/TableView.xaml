            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ScrollViewer>
        <Grid x:Name="TableGrid" ColumnSpacing="25" Margin="10,10,10,10" >
            <!--ItemsControl <ItemsSource="{x:Bind ItemsSource, Mode=OneWay}">
                <DataTemplate x:DataType="entities:FileSystemElement">
                    <FontIcon Glyph="{x:Bind Type}"></FontIcon>
                    <TextBlock Text="{x:Bind Name}"></TextBlock>
                    <TextBlock Text="{x:Bind DateModified}"></TextBlock>
                    <TextBlock Text="{x:Bind Size}"></TextBlock>
                    <TextBlock Text="{x:Bind Type}"></TextBlock>
                </DataTemplate>
            </ItemsControl>-->
        </Grid>
    </ScrollViewer>
</UserControl>
